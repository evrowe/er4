{
  // This is the root config file for this project (config files per directory is possible)
  root: true,

  // Babel for all the new stuff
  parser: 'babel-eslint',

  // Parser options for ES6 and jsx
  parserOptions: {
    ecmaVersion: 6,
    sourceType: 'module',
    ecmaFeatures: {
      jsx: true
    }
  },

  // List of plugins used to provide additional linting rules
  plugins: [
    'react'
  ],

  // Environment presets to support in this project
  env: {
    browser: true,
    node: true
  },

  rules: {
    // 'Possible Errors' Rules
    'comma-dangle': [1, 'never'],
    'no-cond-assign': [1, 'except-parens'],
    'no-constant-condition': 1,
    'no-control-regex': 1,
    'no-dupe-args': 1,
    'no-dupe-keys': 1,
    'no-duplicate-case': 1,
    'no-empty-character-class': 1,
    'no-empty': 1,
    'no-ex-assign': 1,
    'no-extra-boolean-cast': 1,
    'no-extra-parens': [1, 'functions'],
    'no-extra-semi': 1,
    'no-func-assign': 1,
    'no-inner-declarations': 1,
    'no-invalid-regexp': 1,
    'no-irregular-whitespace': 1,
    'no-negated-in-lhs': 1,
    'no-obj-calls': 1,
    'no-regex-spaces': 1,
    'no-sparse-arrays': 1,
    'no-unreachable': 1,
    'use-isnan': 1,
    'no-unexpected-multiline': 1,

    // 'Best Practices' Rules
    'curly': 1,
    'default-case': 1,
    'dot-notation': 1,
    'dot-location': [1, 'property'],
    'eqeqeq': 1,
    'no-caller': 1,
    'no-div-regex': 1,
    'no-eq-null': 1,
    'no-extra-bind': 1,
    'no-fallthrough': 1,
    'no-floating-decimal': 1,
    'no-implied-eval': 1,
    'no-lone-blocks': 1,
    'no-loop-func': 1,
    'no-native-reassign': 1,
    'no-new-func': 1,
    'no-new-wrappers': 1,
    'no-new': 1,
    'no-octal-escape': 1,
    'no-octal': 1,
    'no-param-reassign': 0,
    'no-redeclare': 1,
    'no-script-url': 1,
    'no-unused-expressions': 0,
    'no-with': 1,
    'radix': 1,
    'wrap-iife': [1, 'inside'],
    'yoda': [1, 'never'],
    'strict': [1, 'global'],

    // 'Variable' Rules
    'no-delete-var': 1,
    'no-shadow-restricted-names': 2,
    'no-shadow': [1, {'builtinGlobals': false, 'hoist': 'functions'}],
    'no-undef-init': 1,
    'no-undef': 1,
    'no-undefined': 0,
    'no-unused-vars': [1, {'vars': 'all', 'args': 'none'}],

    // 'Node' Rules
    'callback-return': [2, ['callback', 'cb', 'next']],
    'handle-callback-err': 2,
    'no-new-require': 1,
    'no-path-concat': 1,
    'no-process-exit': 2,

    // 'React' Rules, supported by plugin and each rule is prefixed by the plugin name + /
    'react/jsx-boolean-value': [1, 'never'],
    'react/jsx-no-duplicate-props': 1,
    'react/jsx-no-undef': 1,
    'react/jsx-uses-react': 1,
    'react/jsx-uses-vars': 1,
    'react/no-did-mount-set-state': 1,
    'react/no-did-update-set-state': 1,
    'react/no-multi-comp': 1,
    'react/no-unknown-property': 1,
    'react/jsx-pascal-case': 1,
    'react/prop-types': 1,
    'react/react-in-jsx-scope': 1,
    'react/self-closing-comp': 1,

    // 'Style' Rules
    'jsx-quotes': [1, 'prefer-single'],
    'no-mixed-spaces-and-tabs': 1,
    'no-multi-spaces': 0, // Aligning variable declarations will trip this
    'no-trailing-spaces': 1,
    'object-curly-spacing': [1, 'always', { // space after curly for object literal and destructuring
      'objectsInObjects': false, // do this: { foo: { bar: 'baz' }} (note the ``}}``)
      'arraysInObjects': false // do this: { foo: ["baz", "bar"]}  (note the `]}`)
    }],
    'quotes': [1, 'single'],
    // 'space-infix-op': ['error', {"int32Hint": false}],
    'semi': [1, 'always'],
    'space-in-parens': [1, 'never']
  }
}
